{
  "$schema": "http://json-schema.org/schema#",
  "id": "/db/Metric",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "maxLength": 50,
      "minLength": 1
    },
    "file_uid": {
      "type": "string",
      "maxLength": 40,
      "minLength": 1
    },
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "type": {
      "enum": ["date", "number", "string"],
      "type": "string"
    },
    "aggregation": {"$ref": "/py/agg_opt_schema" },
    "model_options": {"$ref": "/py/model_opt_schema" }
  },
  "additionalProperties": false,
  "required": ["uid", "file_uid", "name", "type"]
}
