{
  "$schema": "http://json-schema.org/schema#",
  "id": "/db/File",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "maxLength": 50,
      "minLength": 1
    },
    "name": {
      "type": "string"
    },
    "filename": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "description": "File description"
    },
    "timestampFieldName": {
      "type": "string",
      "description": "Timestamp field name"
    },
    "timestampFormat": {
      "type": "string",
      "default": "YYYY-MM-DDTHH:mm:ss.sssZ",
      "description": "Timestamp format. Default ISO 8601"
    },
    "type": {
      "description": "Sample file from filesystem, or Uploaded file from user?",
      "enum": [ "sample", "uploaded" ],
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["uid", "name", "filename", "type"]
}
