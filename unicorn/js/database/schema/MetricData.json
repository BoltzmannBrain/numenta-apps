{
  "$schema": "http://json-schema.org/schema#",
  "id": "/db/MetricData",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "maxLength": 50,
      "minLength": 1
    },
    "metric_uid": {
      "type": "string",
      "maxLength": 40,
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "metric_value": {
      "type": "number"
    },
    "anomaly_score": {
      "type": "number"
    }
  },
  "additionalProperties": false,
  "required": ["uid", "metric_uid", "timestamp", "metric_value"]
}
