[Unit]
Description=GROK stopped
 
[Install]
Alias=grok-stopped.service
 
[Service]
Type=forking
PIDFile=-/var/run/nginx
RootDirectory=/opt/numenta/grok
ExecStart=/usr/sbin/nginx -c /opt/numenta/grok/conf/nginx-stopped.conf
ExecStop=/usr/sbin/nginx -c /opt/numenta/grok/conf/nginx-stopped.conf -s stop
ExecReload=/usr/sbin/nginx -c /opt/numenta/grok/conf/nginx-stopped.conf -s reload
Restart=on-abort
