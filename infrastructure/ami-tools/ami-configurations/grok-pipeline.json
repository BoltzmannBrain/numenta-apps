{
  "variables": {
    "ami_name":"{{env `AMI_NAME`}}"
  },
  "builders": [
    {
      "ami_description": "CentOS 7 + Grok",
      "ami_name": "packer-{{user `ami_name`}}-{{isotime | clean_ami_name}}",
      "instance_type": "m3.large",
      "region": "us-west-2",
      "source_ami": "ami-c7d092f7",
      "ssh_port": 22,
      "ssh_timeout": "5m",
      "ssh_username": "centos",
      "tags": {
        "OS_Version": "CentOS",
        "Release": "7"
      },
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "delete_on_termination" : true,
          "volume_size": 32
        }
      ],
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/products.sha",
      "source": "products.sha",
      "type": "file"
    },
    {
      "inline": [
        "echo 'Sleeping for 30s, waiting for system to settle down.'",
        "sleep 30"
      ],
      "type": "shell"
    },
    {
      "type": "shell",
      "script": "packer-scripts/configure-grok-pipeline-centos7-ami"
    }
  ]
}
